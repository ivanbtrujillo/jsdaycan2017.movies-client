{
  "name": "jsdaycan2017.movies-client",
  "description": "A React + Apollo aplication that consumes a GraphQL API about movies",
  "author": "Ivan Bacallado Trujillo",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "apollo-client": "^1.9.3",
    "axios": "^0.16.2",
    "graphql-tag": "^2.4.2",
    "node-sass-chokidar": "0.0.3",
    "npm-run-all": "^4.1.1",
    "raf": "^3.4.0",
    "react": "^16.0.0",
    "react-apollo": "^1.4.16",
    "react-bootstrap": "0.31.3",
    "react-dom": "^16.0.0",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.0.14"
  },
  "scripts": {
    "start": "npm-run-all -p watch-css start-js",
    "build": "npm run build-css && react-scripts build",
    "start-js": "react-scripts start",
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "test": "react-scripts test --env=jsdom --setupTestFrameworkScriptFile=raf/polyfill",
    "test-without-polyfill": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "devDependencies": {
    "stylelint": "^8.2.0",
    "stylelint-config-recommended-scss": "^2.0.0",
    "stylelint-scss": "^2.1.0"
  }
}
